<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bolnizar.memro.ui.fragments.MemeCaptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_edit_text"
            android:layout_marginRight="@dimen/margin_edit_text"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/meme_caption_top_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/top_text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_edit_text"
            android:layout_marginRight="@dimen/margin_edit_text">

            <EditText
                android:id="@+id/meme_caption_bottom_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/bottom_text" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>