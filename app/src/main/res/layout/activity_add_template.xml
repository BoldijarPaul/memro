<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_template"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bolnizar.memro.AddTemplateActivity">

    <ImageView
        android:id="@+id/add_template_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/margin_edit_text"
            android:layout_marginRight="@dimen/margin_edit_text">

            <EditText
                android:id="@+id/add_template_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_meme_template_name"
                android:lines="1" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/add_template_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_file_upload_black_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_file_upload_black_24dp"
            android:padding="15dp"
            android:text="@string/choose_image" />
    </LinearLayout>

</LinearLayout>
